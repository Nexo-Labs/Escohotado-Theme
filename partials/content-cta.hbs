{{{html}}}

<div class="gh-cta-gradient"></div>

<section class="gh-cta">
    {{#has visibility="paid"}}
        <h4 class="gh-cta-title">Esta publicación es solo para suscriptores de pago</h4>
    {{/has}}
    {{#has visibility="members"}}
        <h4 class="gh-cta-title">Esta publicación es solo para suscriptores</h4>
    {{/has}}
    {{#has visibility="filter"}}
        <h4 class="gh-cta-title">Esta publicación es solo para suscriptores de {{tiers}}</h4>
    {{/has}}

    <div class="gh-cta-actions">
        {{#if @member}}
            <button class="gh-btn gh-primary-btn" href="#/portal/account/plans" data-portal="account/plans">Actualizar ahora</button>
        {{else}}
            <button class="gh-btn gh-primary-btn" href="#/portal/signup" data-portal="signup">Suscribirse ahora</button>
            <span class="gh-cta-link" href="#/portal/signin" data-portal="signin">¿Ya tienes una cuenta? Inicia sesión.</span>
        {{/if}}
    </div>
</section>