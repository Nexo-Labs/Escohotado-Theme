<!DOCTYPE html>
<html lang="{{@site.locale}}">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{meta_title}}</title>
    <link rel="stylesheet" href="{{asset "built/screen.css"}}">

    <script>
        document.documentElement.style.setProperty('--inner-height', window.innerHeight + 'px');
    </script>

    {{ghost_head}}
</head>

<body class="{{body_class}} is-head-left-logo is-head-brand{{#if @site.members_enabled}}{{#unless @member}}{{#is "home"}} is-home-cta{{/is}}{{/unless}}{{/if}}{{#match @custom.title_font "=" "Elegant serif"}} has-serif-title{{/match}}{{#match @custom.body_font "=" "Elegant serif"}} has-serif-body{{/match}}">
    <div class="gh-site">

        <header id="gh-head" class="gh-head gh-outer">
            <div class="gh-head-inner">
                <div class="gh-head-brand">
                    <div class="gh-head-brand-wrapper">
                        <a class="gh-head-logo" href="{{@site.url}}">
                            {{#if @site.logo}}
                                <img src="{{@site.logo}}" alt="{{@site.title}}">
                            {{else}}
                                {{@site.title}}
                            {{/if}}
                        </a>
                    </div>
                    <button class="gh-search gh-icon-btn" aria-label="Buscar en este sitio" data-ghost-search>{{> "icons/search"}}</button>
                    <button class="gh-burger" aria-label="Alternar menú"></button>
                </div>

                <nav class="gh-head-menu">
                    <!-- Menú desplegable Categorías -->
                    <ul class="nav">
                        <li class="nav-dropdown">
                            <a href="#" class="nav-dropdown-toggle">
                                Publicaciones
                                {{> "icons/chevron-down"}}
                            </a>
                            <ul class="nav-dropdown-menu">
                                <li class="nav-dropdown-section">
                                    <span class="nav-section-title">Por Tipo</span>
                                    <ul class="nav-section-items">
                                        <li><a href="/tag/articulos/">Artículos</a></li>
                                        <li><a href="/tag/audios/">Audios</a></li>
                                    </ul>
                                </li>
                                <li class="nav-dropdown-section">
                                    <span class="nav-section-title">Por Tema</span>
                                    <ul class="nav-section-items">
                                        <li><a href="/tag/politica/">Política</a></li>
                                        <li><a href="/tag/drogas/">Drogas</a></li>
                                        <li><a href="/tag/filosofia/">Filosofía</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    
                    {{navigation}}
                </nav>

                <div class="gh-head-actions">
                    {{#unless @site.members_enabled}}
                        <button class="gh-search gh-icon-btn" aria-label="Buscar en este sitio" data-ghost-search>{{> "icons/search"}}</button>
                    {{else}}
                        <button class="gh-search gh-icon-btn" aria-label="Buscar en este sitio" data-ghost-search>{{> "icons/search"}}</button>
                        <div class="gh-head-members">
                            {{#unless @member}}
                                {{#unless @site.members_invite_only}}
                                    <a class="gh-head-link" href="#/portal/signin" data-portal="signin">Iniciar sesión</a>
                                    <a class="gh-head-btn gh-btn gh-primary-btn" href="#/portal/signup" data-portal="signup">Suscribirse</a>
                                {{else}}
                                    <a class="gh-head-btn gh-btn gh-primary-btn" href="#/portal/signin" data-portal="signin">Iniciar sesión</a>
                                {{/unless}}
                            {{else}}
                                <a class="gh-head-btn gh-btn gh-primary-btn" href="#/portal/account" data-portal="account">Cuenta</a>
                            {{/unless}}
                        </div>
                    {{/unless}}
                </div>
            </div>
        </header>

        {{{body}}}

        <footer class="gh-foot{{#unless @site.secondary_navigation}} no-menu{{/unless}} gh-outer">
            <div class="gh-foot-inner gh-inner">
                <div class="gh-copyright">
                    {{@site.title}} © {{date format="YYYY"}}
                </div>
                {{#if @site.secondary_navigation}}
                    <nav class="gh-foot-menu">
                        {{navigation type="secondary"}}
                    </nav>
                {{/if}}
                <div class="gh-powered-by">
                    <a href="https://ghost.org/" target="_blank" rel="noopener">Desarrollado con Ghost</a>
                </div>
            </div>
        </footer>

    </div>

    {{#is "post, page"}}
        {{> "pswp"}}
    {{/is}}

    <script src="{{asset "built/main.min.js"}}"></script>

    {{ghost_foot}}
</body>

</html>